{
  "name": "Cold outreach message generator",
  "description": "highlight the most relevant experience, we'll do the rest",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "48": "assets/48.png",
    "72": "assets/72.png",
    "96": "assets/96.png",
    "144": "assets/144.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Generate message"
  },
  "permissions": ["contextMenus", "tabs", "storage"],
  "background": {
    "service_worker": "scripts/contextMenuServiceWorker.js"
  }
}
